            <div class="info">
                <div class="container">
                    <div class="detail">First name</div>
                    <div class="response" id="firstname-text">@Model.firstname</div>
                    <input type="text" id="firstname-input" value="@Model.firstname" class="edit-input" style="display:none; width: 100%; height: 100%; border-radius: 5px; outline: none; border: 1.5px solid #0090d4; margin-bottom: 10px; padding-left: 5px;" />
                    <div class="detail">Last name</div>
                    <div class="response" id="lastname-text">@Model.lastname</div>
                    <input type="text" id="lastname-input" value="@Model.lastname" class="edit-input" style="display:none; width: 100%; height: 100%; border-radius: 5px; outline: none; border: 1.5px solid #0090d4; margin-bottom: 10px; padding-left: 5px;" />
                    <div class="detail">Date of birth</div>
                    <div class="response" id="dob-text">@Model.date_of_birth.ToShortDateString()</div>
                    <input type="date" id="dob-input" value="@Model.date_of_birth.ToString("yyyy-MM-dd")" class="edit-input" style="display:none; width: 100%; height: 100%; border-radius: 5px; outline: none; border: 1.5px solid #0090d4; margin-bottom: 10px; padding-left: 5px;" />
                    <div class="detail">Gender</div>
                    <div class="response" id="gender-text">@Model.gender</div>
                    <input type="text" id="gender-input" value="@Model.gender" class="edit-input" style="display:none; width: 100%; height: 100%; border-radius: 5px; outline: none; border: 1.5px solid #0090d4; margin-bottom: 10px; padding-left: 5px;" /> 
                    <div class="detail">Country</div>
                    <div class="response">Ghana</div>
                    <input type="text" id="country-input" value="Ghana" class="edit-input" style="display:none;width: 100%; height: 100%; border-radius: 5px; outline: none; border: 1.5px solid #0090d4; margin-bottom: 10px; padding-left: 5px;" /> 
                    <div class="detail">Language</div>
                    <div class="response">English</div>
                    <input type="text" id="language-input" value="English" class="edit-input" style="display:none;width: 100%; height: 100%; border-radius: 5px; outline: none; border: 1.5px solid #0090d4; margin-bottom: 10px; padding-left: 5px;" />
                    <div class="detail">Mobile number(with country code)</div>
                    <div class="response" id="phonenumber-text">+233 @Model.phonenumber</div>
                    <input type="text" id="phonenumber-input" value="@Model.phonenumber" class="edit-input" style="display:none; width: 100%; height: 100%; border-radius: 5px; outline: none; border: 1.5px solid #0090d4; margin-bottom: 10px; padding-left: 5px;" />
                </div>
        
                <div class="edit" onclick="toggleEdit()">Edit</div>
                <div class="save" onclick="saveChanges()" style="display:none;">Save</div>
             </div>
        </div>
        
        <script>
            function toggleEdit() {
                // Hide the static text fields
                document.querySelectorAll('.response').forEach(function (element) {
                    element.style.display = 'none';
                });
        
                // Show the input fields
                document.querySelectorAll('.edit-input').forEach(function (element) {
                    element.style.display = 'block';
                });
        
                // Show the Save button and hide the Edit button
                document.querySelector('.edit').style.display = 'none';
                document.querySelector('.save').style.display = 'block';
            }
        
            function saveChanges() {
                // Hide the input fields
                document.querySelectorAll('.edit-input').forEach(function (element) {
                    element.style.display = 'none';
                });
        
                // Show the static text fields
                document.querySelectorAll('.response').forEach(function (element) {
                    element.style.display = 'block';
                });
        
                // Update the static text fields with the input values
                document.getElementById('firstname-text').innerText = document.getElementById('firstname-input').value;
                document.getElementById('lastname-text').innerText = document.getElementById('lastname-input').value;
                document.getElementById('dob-text').innerText = new Date(document.getElementById('dob-input').value).toLocaleDateString();
                document.getElementById('gender-text').innerText = document.getElementById('gender-input').value;
                document.getElementById('phonenumber-text').innerText = '+233 ' + document.getElementById('phonenumber-input').value;
        
                // Show the Edit button and hide the Save button
                document.querySelector('.edit').style.display = 'block';
                document.querySelector('.save').style.display = 'none';
        
                // TODO: Add code to save the updated values to the server 
            }
        </script>
        


